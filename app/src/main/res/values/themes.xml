<resources>

    <style name="Base.Theme.Websoso" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_100_6341F0</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="postSplashScreenTheme">@style/Theme.Websoso</item>
    </style>

    <style name="Theme.MemoWriteActivityWithWhiteStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Websoso" parent="Base.Theme.Websoso" />
</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivCheckUserInfoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:padding="10dp"
        android:src="@drawable/ic_navigate_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCheckUserInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_user_info_title"
        android:textAppearance="@style/title2"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/ivCheckUserInfoBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivCheckUserInfoBack" />

    <View
        android:id="@+id/viewHeaderUnderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="108dp"
        android:background="@color/gray_50_F4F5F8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCheckUserInfoNickNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginStart="20dp"
        android:text="@string/check_user_info_nickname_title"
        android:textAppearance="@style/body1"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCheckUserInfoBack" />

    <TextView
        android:id="@+id/tvCheckUserInfoNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/body2"
        android:textColor="@color/gray_200_AEADB3"
        app:layout_constraintStart_toStartOf="@id/tvCheckUserInfoNickNameTitle"
        app:layout_constraintTop_toBottomOf="@id/tvCheckUserInfoNickNameTitle"
        tool:text="김명진" />

    <View
        android:id="@+id/viewCheckUserInfoBetweenLineOn"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray_50_F4F5F8"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCheckUserInfoNickName" />

    <TextView
        android:id="@+id/tvCheckUserInfoEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/check_user_info_email_title"
        android:textAppearance="@style/body1"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tvCheckUserInfoNickName"
        app:layout_constraintTop_toBottomOf="@id/viewCheckUserInfoBetweenLineOn" />

    <TextView
        android:id="@+id/tvCheckUserInfoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/body2"
        android:textColor="@color/gray_200_AEADB3"
        app:layout_constraintStart_toStartOf="@id/tvCheckUserInfoEmailTitle"
        app:layout_constraintTop_toBottomOf="@id/tvCheckUserInfoEmailTitle" />

    <View
        android:id="@+id/viewCheckUserInfoBetweenLineUnder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray_50_F4F5F8"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCheckUserInfoEmail" />

    <TextView
        android:id="@+id/tvCheckUserInfoCancelMembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/check_user_info_cancel_membership_title"
        android:textAppearance="@style/body1"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tvCheckUserInfoNickName"
        app:layout_constraintTop_toBottomOf="@id/viewCheckUserInfoBetweenLineUnder" />

</androidx.constraintlayout.widget.ConstraintLayout>